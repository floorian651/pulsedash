version: "3.9"

services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: wavr_app
    command: uvicorn src.api.main:app --host 0.0.0.0 --port 8000
    env_file:
      - .env
    environment:
      PYTHONPATH: /workspaces/wavr
      DATABASE_URL: ${DATABASE_URL}
      REDIS_URL: ${REDIS_URL}
      MINIO_ENDPOINT: ${MINIO_ENDPOINT}
      MINIO_ACCESS_KEY: ${MINIO_ACCESS_KEY}
      MINIO_SECRET_KEY: ${MINIO_SECRET_KEY}
    volumes:
      - .:/workspaces/wavr
    depends_on:
      - db
      - redis
      - minio
    ports:
      - "${APP_PORT}:8000"

  celery:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: wavr_celery
    command: celery -A app.celery_app worker --loglevel=INFO
    env_file:
      - .env
    environment:
      DATABASE_URL: ${DATABASE_URL}
      REDIS_URL: ${REDIS_URL}
      MINIO_ENDPOINT: ${MINIO_ENDPOINT}
      MINIO_ACCESS_KEY: ${MINIO_ACCESS_KEY}
      MINIO_SECRET_KEY: ${MINIO_SECRET_KEY}
    volumes:
      - .:/workspaces/wavr
    depends_on:
      - redis
      - db
      - minio

  redis:
    image: redis:7
    container_name: wavr_redis
    ports:
      - "${REDIS_PORT}:6379"

  db:
    image: postgres:15
    container_name: wavr_db
    env_file:
      - .env
    environment:
      POSTGRES_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
      POSTGRES_DB: ${POSTGRES_DB}
    volumes:
      - pgdata:/var/lib/postgresql/data
    ports:
      - "${POSTGRES_PORT}:5432"

  minio:
    image: minio/minio:latest
    container_name: wavr_minio
    command: server /data --console-address ":9001"
    env_file:
      - .env
    environment:
      MINIO_ROOT_USER: ${MINIO_ROOT_USER}
      MINIO_ROOT_PASSWORD: ${MINIO_ROOT_PASSWORD}
    volumes:
      - minio_data:/data
    ports:
      - "9000:9000"
      - "9001:9001"

volumes:
  pgdata:
  minio_data:
